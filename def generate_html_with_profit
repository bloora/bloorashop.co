def generate_html_with_profit(products, profit_margin=0.2):
    html_content = """
    <html lang="ar">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>متجر بلوره</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #FAADB6;
                color: #333;
                padding: 20px;
            }
            h1 {
                text-align: center;
                color: #333;
            }
            .product {
                background-color: white;
                margin: 10px;
                padding: 15px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                width: 300px;
                display: inline-block;
                text-align: center;
            }
            .product h2 {
                font-size: 20px;
                color: #FAADB6;
            }
            .product p {
                font-size: 18px;
            }
            .product .price {
                font-size: 18px;
                color: green;
            }
            .product .selling-price {
                font-size: 20px;
                font-weight: bold;
                color: #E74C3C;
            }
            img {
                width: 100%;
                height: auto;
                border-radius: 8px;
            }
            a {
                text-decoration: none;
                color: #3498DB;
            }
        </style>
    </head>
    <body>
        <h1>مرحباً في متجر بلوره</h1>
        <div id="products">
    """
    
    # تطبيق هامش الربح وإضافة المنتجات
    for product in products:
        product["selling_price"] = round(product["price"] * (1 + profit_margin), 2)
        html_content += f"""
        <div class="product">
            <img src="{product['image_url']}" alt="{product['name']}">
            <h2>{product['name']}</h2>
            <p>السعر الأصلي: {product['price']} ر.س</p>
            <p class="selling-price">السعر بعد هامش الربح: {product['selling_price']} ر.س</p>
            <p><a href="https://www.amazon.sa/dp/{product['asin']}" target="_blank">شراء الآن</a></p>
        </div>
        """
    
    html_content += """
        </div>
    </body>
    </html>
    """
    
    # حفظ الملف
    with open("blora_store.html", "w", encoding="utf-8") as file:
        file.write(html_content)
    print("تم إنشاء الملف بنجاح: blora_store.html")

# قائمة المنتجات
products = [
    {
        "name": "منتج 1",
        "price": 100,
        "asin": "B09XYZ1234",
        "image_url": "https://example.com/image1.jpg"
    },
    {
        "name": "منتج 2",
        "price": 200,
        "asin": "B08XYZ5678",
        "image_url": "https://example.com/image2.jpg"
    },
    {
        "name": "منتج 3",
        "price": 150,
        "asin": "B07XYZ9101",
        "image_url": "https://example.com/image3.jpg"
    }
]

# استدعاء الدالة لتوليد ملف HTML
generate_html_with_profit(products)

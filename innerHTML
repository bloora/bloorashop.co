<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>بلورة - متجر</title>
</head>
<body>

    <h1>منتجات آيفون</h1>
    <div id="product-list"></div>

    <script>
        // جلب البيانات من GitHub
        fetch('https://raw.githubusercontent.com/your-username/your-repo-name/main/data/products.json')
            .then(response => response.json())
            .then(data => {
                let productsHtml = '';
                data.forEach(product => {
                    productsHtml += `
                        <div class="product">
                            <h2>${product.product_name}</h2>
                            <p>السعر: ${product.price}</p>
                            <a href="${product.link}" target="_blank">رابط المنتج</a>
                        </div>
                    `;
                });
                document.getElementById('product-list').innerHTML = productsHtml;
            })
            .catch(error => console.error('Error loading data:', error));
    </script>

</body>
</html>
